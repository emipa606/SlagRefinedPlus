    <graphicData>
      <texPath>Things/Gold_slag</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <statBases>
      <Mass>5</Mass>
    </statBases>
    <soundDrop>ChunkSlag_Drop</soundDrop>
    <thingCategories>
      <li>Chunks</li>
    </thingCategories>
    <smeltProducts>
      <Gold>75</Gold>
    </smeltProducts>
  </ThingDef>
  <ThingDef ParentName="ChunkBase">
    <defName>ChunkSlagPlasteel</defName>
    <label>plasteel slag chunk</label>
    <description>A chunk of plasteel slag. While it's useless in its current form, it can be smelted to recover plasteel.</description>
    <graphicData>
      <texPath>Things/Plasteel_slag</texPath>
