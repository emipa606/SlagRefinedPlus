<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ChunkBase">
    <defName>ChunkSlagSterile</defName>
    <label>sterile slag chunk</label>
    <description>A chunk of slag that appears to be from a sterile compartment of a ship. While it's useless in its current form, it can be smelted to recover silver.</description>
    <graphicData>
      <texPath>Things/Sterile_slag</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <statBases>
      <Mass>5</Mass>
    </statBases>
    <soundDrop>ChunkSlag_Drop</soundDrop>
    <thingCategories>
      <li>Chunks</li>
    </thingCategories>
    <smeltProducts>
      <Silver>75</Silver>
    </smeltProducts>
  </ThingDef>
  <ThingDef ParentName="ChunkBase">
    <defName>ChunkSlagGold</defName>
